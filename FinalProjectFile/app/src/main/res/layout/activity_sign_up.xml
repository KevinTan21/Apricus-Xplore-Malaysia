<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/singUp_backdrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/modules_backdrop" />

    <ImageView
        android:id="@+id/signup_logo"
        android:layout_width="171dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="@+id/singUp_backdrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/singUp_backdrop"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/xploremalaysialogo" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:fontFamily="@font/headingpompadour"
        android:text="Welcome to Xplore Malaysia"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/singUp_backdrop"
        app:layout_constraintEnd_toEndOf="@+id/singUp_backdrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_logo"
        app:layout_constraintVertical_bias="0.315" />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="208dp"
        android:layout_height="27dp"
        android:layout_marginTop="328dp"
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/custom_password_input"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/neuehaasunicalight"
        android:hint="@string/re_enter_password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_logo" />

    <EditText
        android:id="@+id/password"
        android:layout_width="208dp"
        android:layout_height="27dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/custominput"
        android:drawableStart="@drawable/custom_password_input"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/neuehaasunicalight"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_logo" />

    <EditText
        android:id="@+id/username"
        android:layout_width="208dp"
        android:layout_height="27dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/custominput"
        android:backgroundTint="#FFFFFF"
        android:drawableStart="@drawable/custom_email_input"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/neuehaasunicalight"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_logo" />

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="207dp"
        android:layout_height="40dp"
        android:fontFamily="@font/pompadourbold"
        android:text="Register an Account"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repassword"
        app:layout_constraintVertical_bias="0.155" />

    <Button
        android:id="@+id/btnsignin"
        android:layout_width="207dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/headingpompadour"
        android:text="Registered? SIGN IN"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repassword"
        app:layout_constraintVertical_bias="0.304" />

</androidx.constraintlayout.widget.ConstraintLayout>